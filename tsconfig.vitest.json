{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["vitest/globals", "node"],
    "paths": {
      "~~/*": ["./*"],
      "~/*": ["./*"],
      "#server/*": ["./server/*"],
      "#tests/*": ["./tests/*"]
